<h1><%= @pet.name %></h1>

<h3><%= @pet.species %></h3>
<p><%= @pet.address %></p>
<p><%= @pet.found_on %></p>


<%= link_to "See All Pets", pets_path, class: "btn btn-primary" %>
<br>
<%= link_to "Edit this Pet", edit_pet_path(@pet), class: "btn btn-info" %>
<br>
<%= link_to "Delete This Pet", pet_path(@pet), class: "btn btn-warning", method: :delete, data: { confirm: "Are you certain you want to delete your furry, feral friend?"} %>
